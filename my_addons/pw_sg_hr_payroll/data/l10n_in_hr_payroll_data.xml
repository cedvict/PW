            <field name="amount_python_compute">result = inputs.BNS and inputs.BNS.amount</field>
            <field name= "note">Employer contribution does not become part of employeeâ€™s income and hence income tax is not payable on this part.</field>
            <field name="register_id" ref="hr_register_cpf_fund"/>
