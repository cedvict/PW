        <!--hr salary rules for Others -->
        <record id="hr_payslip_rule_cpf_total" model="hr.salary.rule">
            <field name="code">CPFTOTAL_SPR_SIN</field>
            <field name="name">Total CPF</field>
            <field name="category_id" ref="CAT_CPF_TOTAL"/>
